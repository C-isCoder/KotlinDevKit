<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
  </style>
  <!-- dialog 动画 -->
  <style name="Dialog.Window" parent="@android:style/Animation.Activity">
    <item name="android:windowEnterAnimation">@anim/view_bottom_enter</item>
    <item name="android:windowExitAnimation">@anim/view_bottom_exit</item>
  </style>
  <!-- 启动页 -->
  <style name="SplashTheme" parent="AppTheme">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  <!-- 二维码扫描 -->
  <style name="QRCodeScanTheme" parent="AppTheme">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="DialogTheme" parent="@style/AppTheme">
    <!--下面两个要设置成透明-->
    <item name="colorPrimary">@color/transparent</item>
    <item name="colorPrimaryDark">@color/transparent</item>
    <!--颜色要跟当前项目的颜色匹配，不然 Dialog 中输入框、按钮字体颜色不是主色-->
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowTranslucentStatus">false</item>
  </style>

  <!-- 顶部标题栏 -->
  <style name="top_bar_layout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@android:color/white</item>
    <item name="android:layout_height">@dimen/top_bar_height</item>
  </style>

  <!--标题ImageButton样式-->
  <style name="top_bar_btn_left">
    <item name="android:layout_width">@dimen/top_bar_height</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingLeft">@dimen/top_padding</item>
    <item name="android:paddingRight">@dimen/top_padding</item>
    <item name="android:scaleType">center</item>
    <item name="android:clickable">true</item>
    <item name="android:background">@null</item>
  </style>

  <!--标题TextView样式-->
  <style name="top_bar_tv_left">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingLeft">@dimen/top_padding</item>
    <item name="android:paddingRight">@dimen/top_padding</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/font_size_14</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:gravity">center</item>
  </style>

  <!--标题ImageButton样式-->
  <style name="top_bar_btn_right">
    <item name="android:layout_width">@dimen/top_bar_height</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingLeft">@dimen/top_padding</item>
    <item name="android:paddingRight">@dimen/top_padding</item>
    <item name="android:scaleType">center</item>
    <item name="android:background">@null</item>
    <item name="android:layout_alignParentRight">true</item>
  </style>

  <!--标题TextView样式-->
  <style name="top_bar_tv_right">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingLeft">@dimen/top_padding</item>
    <item name="android:paddingRight">@dimen/top_padding</item>
    <item name="android:textColor">@color/top_bar_title_color</item>
    <item name="android:textSize">@dimen/font_size_14</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:gravity">center</item>
  </style>

  <!-- 中间题目样式-->
  <style name="top_bar_title">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/top_bar_height</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:textColor">@color/top_bar_title_color</item>
    <item name="android:textSize">@dimen/title_font_size</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <!-- 横线-->
  <style name="line_horizontal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/horizontal_line_height</item>
    <item name="android:background">@color/horizontal_line_color</item>
  </style>

  <!-- 竖线-->
  <style name="line_vertical">
    <item name="android:layout_width">0.5dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/horizontal_line_color</item>
  </style>

  <!-- 标题栏 横线-->
  <style name="line_horizontal.title">
    <item name="android:layout_alignParentBottom">true</item>
  </style>

  <!-- 标题栏 沉浸式-->
  <style name="top_bar_layout.immerse">
    <item name="android:layout_height">68dp</item>
    <item name="android:paddingTop">24dp</item>
  </style>
</resources>
